<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>SimpleSimd</RootNamespace>
    <nullable>enable</nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Gilad Freidkin</Authors>
    <RepositoryUrl>https://github.com/giladfrid009/SimpleSIMD</RepositoryUrl>
    <PackageTags>SIMD, Library, Performance, Parallel, Math, Generic, Allocation, Array, Span</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Easy to use SIMD accelerated span and array methods</Description>
    <Copyright>Copyright 2020 (c) Gilad Freidkin, All rights reserved</Copyright>
    <Version>2.4.0</Version>
    <PackageReleaseNotes>Major performance improvments. Accepts ReadOnlySpan as a result span and writes into it.</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile></DocumentationFile>
  </PropertyGroup>

</Project>
